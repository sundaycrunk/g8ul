mixin navbar(user)
  nav.navbar.navbar-expand.navbar-dark.bg-none
    a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
      img(src="https://seeklogo.com/images/N/nodejs-logo-FBE122E377-seeklogo.com.png", width="36")
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href="/") Home
        li.nav-item
          a.nav-link(href="/leads") Leads
    div.navbar-right
      if user
        //- div.navbar-right
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/") Hello #{user.email}!
          li.nav-item
            a.nav-link(href="/logout") Logout
      else
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href="/login") Login
